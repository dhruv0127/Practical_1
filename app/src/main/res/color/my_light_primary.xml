<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="#2196F3">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Change the color code to your desired color -->
        </shape>
    </item>
    <item android:color="#2196F3">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Default or non-pressed state color -->
        </shape>
    </item>
</selector>

